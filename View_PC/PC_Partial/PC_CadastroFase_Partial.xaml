<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabela.View_PC.PC_Partial.PC_CadastroFase_Partial">
    
    <Grid RowDefinitions="*,Auto">
        <Grid Row="0" RowSpacing="10" ColumnSpacing="10" BackgroundColor="{StaticResource GateCremeFundoDashBoard}"
               ColumnDefinitions="Auto,*" RowDefinitions="Auto, *">

            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                   VerticalOptions="Center"
                   Text="Nome" />
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource BorderEntry}">
                <Entry Placeholder="Nome" Style="{StaticResource Entry24Style}"
                       Text="{Binding NomeFase, Mode=TwoWay}" IsEnabled="{Binding ModoEdicao}"/>
            </Border>
        </Grid>

        <Grid Row="1" ColumnDefinitions="*,*">
            <Button Grid.Column="0" Style="{StaticResource Button24_Vermelho}"
                    Text="Voltar" VerticalOptions="Start"
                    Command="{Binding VoltarFaseCommand, Mode=TwoWay}"/>
            <Button Grid.Column="1" Style="{StaticResource Button24_Vermelho}"
                    Text="Salvar" VerticalOptions="Start"
                    Command="{Binding AdicionarFaseCommand, Mode=TwoWay}" IsEnabled="{Binding ModoEdicao}"/>
        </Grid>
    </Grid>
</ContentView>