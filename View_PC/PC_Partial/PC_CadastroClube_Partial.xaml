<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabela.View_PC.PC_Partial.PC_CadastroClube_Partial">
        <Grid  RowSpacing="10" ColumnSpacing="10" BackgroundColor="{StaticResource GateCremeFundoDashBoard}"
              ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,*">
            <Label Grid.Row="0" Grid.Column="0" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource GateVermelho}"
                   Text="Logo"/>
            
            <Border Grid.Row="0" Grid.Column="1" HorizontalOptions="Start" Stroke="{StaticResource GateVermelho}">
                <Image Aspect="AspectFit" MaximumHeightRequest="200" Source="{Binding ImagemClube}" />
                <Border.GestureRecognizers>

                </Border.GestureRecognizers>
            </Border>
            <Label Grid.Row="1" Grid.Column="0" FontSize="16" FontAttributes="Bold" 
                   TextColor="{StaticResource GateVermelho}"
                   VerticalOptions="Center"
                   Text="Nome:"/>

            <Border Grid.Row="1" Grid.Column="1" 
                    Stroke="{StaticResource GateVermelho}" StrokeThickness="2" 
                    StrokeShape="RoundRectangle 10" 
                    Padding="10"
                    HorizontalOptions="Fill">
                <Entry Placeholder="Nome do Clube" TextColor="{StaticResource GatePreto}"
                      FontSize="16" Text="{Binding NomeClube, Mode=TwoWay}"/>
            </Border>
            
            <Button Grid.Row="3" Grid.Column="1" 
                    BackgroundColor="{StaticResource GateVermelho}" 
                    BorderColor="{StaticResource GateVermelho}" BorderWidth="5"
                    HorizontalOptions="Start"
                    TextColor="{StaticResource GateCreme}"
                    Text="Adicionar" 
                    Command="{Binding AdicionarCommand, Mode=TwoWay}"/>
        </Grid>
</ContentView>