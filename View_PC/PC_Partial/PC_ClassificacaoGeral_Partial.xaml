<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabela.View_PC.PC_Partial.PC_ClassificacaoGeral_Partial"
             xmlns:cards="clr-namespace:Tabela.View_PC.Cards_List">

    <Grid  RowDefinitions="Auto, *" RowSpacing="20">
        <Grid Grid.Row="0" RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                   Text="{Binding  Campeonato.Campeonato_Nome}"/>
            <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource Label24BoldStyle}"
                   Text="{Binding Campeonato.Campeonato_Data}"/>
            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                   Text="{Binding Campeonato.Campeonato_Local}"/>
            <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource Label24BoldStyle}">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Rodada "/>
                        <Span Text="6"/>
                        <Span Text=" de "/>
                        <Span Text="Total"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </Grid>

        <ListView Grid.Row="1" ItemsSource="{Binding ListaResultados}" HasUnevenRows="True" BackgroundColor="Transparent"
                  SelectionMode="Single" SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <cards:ClubeCard/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentView>