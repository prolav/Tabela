<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cardsList="clr-namespace:Tabela.View_PC.Cards_List"
             x:Class="Tabela.View_PC.PC_Partial.PC_NovoCampeonato_Partial"
             xmlns:local="Tabela.Controls"
             xmlns:controls="clr-namespace:Tabela.Controls">

    <Grid RowDefinitions="Auto,*,*,Auto" ColumnDefinitions="*,*,*" RowSpacing="5" ColumnSpacing="10">
         <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" ColumnDefinitions="*,*,Auto,Auto,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="10">
             <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource Label16BoldStyle}"
                    Text="{Binding  Campeonato.Campeonato_Nome}"/>
             <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource Label16BoldStyle}"
                    Text="{Binding Campeonato.Campeonato_Data}"/>
             <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource Label16BoldStyle}"
                    Text="{Binding Campeonato.Campeonato_Local}"/>
             <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource Label16BoldStyle}"
                    Text="{Binding Campeonato.Campeonato_NumerosRodadas, StringFormat='N.ยบ de rodadas {0}'}"/>

             <Button Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Style="{StaticResource Button24_Vermelho}" VerticalOptions="Center"
                     Text="Limpar Tudo" Command="{Binding LimparTudoCommand, Mode=TwoWay}"/>
             <Button Grid.Row="0" Grid.Column="4" Grid.RowSpan="2" Style="{StaticResource Button24_Vermelho}" VerticalOptions="Center"
                     Text="Gerar Nomes" Command="{Binding GerarNomesCommand, Mode=TwoWay}"/>
             <Button Grid.Row="0" Grid.Column="5" Grid.RowSpan="2" Style="{StaticResource Button24_Vermelho}" VerticalOptions="Center"
                     Text="Salvar" Command="{Binding AdicionarNovoCampeonatoCommand, Mode=TwoWay}"/>
         </Grid>

        <Frame Grid.Row="1" Grid.Column="0" BorderColor="{StaticResource GateVermelho}" BackgroundColor="{StaticResource GateCremeFundoDashBoard}" 
               Padding="5,2,5,2" IsVisible="{Binding ListmontagemCampeonatoModel1[0].CampoHabilitado, FallbackValue=false}">
              <Grid RowDefinitions="Auto,*">
                     <Label Grid.Row="0" Style="{StaticResource Label24BoldStyle}"
                            Text="{Binding ListmontagemCampeonatoModel1[0].MontagemCampeonatoModel_NumeroCampo, StringFormat='Campo {0}'}"/>

                     <ListView Grid.Row="1" ItemsSource="{Binding ListmontagemCampeonatoModel1}" HasUnevenRows="True" BackgroundColor="Transparent"
                                SelectionMode="None" SeparatorVisibility="None" VerticalOptions="FillAndExpand" CachingStrategy="RecycleElementAndDataTemplate">
                             <ListView.ItemTemplate>
                                    <DataTemplate>
                                           <ViewCell>
                                                  <cardsList:NovoCampeonatoCard/>
                                           </ViewCell>
                                    </DataTemplate>
                             </ListView.ItemTemplate>
                     </ListView>
              </Grid>
        </Frame>

           <Frame Grid.Row="1" Grid.Column="1" BorderColor="{StaticResource GateVermelho}" BackgroundColor="{StaticResource GateCremeFundoDashBoard}" 
                  IsVisible="{Binding ListmontagemCampeonatoModel2[0].CampoHabilitado, FallbackValue=false}" Padding="5,2,5,2">
                  <Grid RowDefinitions="Auto,*">
                         <Label Grid.Row="0" Style="{StaticResource Label24BoldStyle}"
                                Text="{Binding ListmontagemCampeonatoModel2[0].MontagemCampeonatoModel_NumeroCampo, StringFormat='Campo {0}'}"/>

                         <ListView Grid.Row="1" ItemsSource="{Binding ListmontagemCampeonatoModel2}" HasUnevenRows="True" BackgroundColor="Transparent"
                                   SelectionMode="None" SeparatorVisibility="None" VerticalOptions="FillAndExpand">
                                <ListView.ItemTemplate>
                                       <DataTemplate>
                                              <ViewCell>
                                                     <cardsList:NovoCampeonatoCard/>
                                              </ViewCell>
                                       </DataTemplate>
                                </ListView.ItemTemplate>
                         </ListView>
                  </Grid>
           </Frame>

           <Frame Grid.Row="1" Grid.Column="2" BorderColor="{StaticResource GateVermelho}" BackgroundColor="{StaticResource GateCremeFundoDashBoard}" 
                  IsVisible="{Binding ListmontagemCampeonatoModel3[0].CampoHabilitado, FallbackValue=false}" Padding="5,2,5,2">
                  <Grid RowDefinitions="Auto,*">
                         <Label Grid.Row="0" Style="{StaticResource Label24BoldStyle}"
                                Text="{Binding ListmontagemCampeonatoModel3[0].MontagemCampeonatoModel_NumeroCampo, StringFormat='Campo {0}'}"/>

                         <ListView Grid.Row="1" ItemsSource="{Binding ListmontagemCampeonatoModel3}" HasUnevenRows="True" BackgroundColor="Transparent"
                                   SelectionMode="None" SeparatorVisibility="None" VerticalOptions="FillAndExpand">
                                <ListView.ItemTemplate>
                                       <DataTemplate>
                                              <ViewCell>
                                                     <cardsList:NovoCampeonatoCard/>
                                              </ViewCell>
                                       </DataTemplate>
                                </ListView.ItemTemplate>
                         </ListView>
                  </Grid>
           </Frame>

        <Frame Grid.Row="2" Grid.Column="0" BorderColor="{StaticResource GateVermelho}" BackgroundColor="{StaticResource GateCremeFundoDashBoard}" 
               IsVisible="{Binding ListmontagemCampeonatoModel4[0].CampoHabilitado, FallbackValue=false}" Padding="5,2,5,2">
               <Grid RowDefinitions="Auto,*">
                    <Label Grid.Row="0" Style="{StaticResource Label24BoldStyle}"
                           Text="{Binding ListmontagemCampeonatoModel4[0].MontagemCampeonatoModel_NumeroCampo, StringFormat='Campo {0}'}"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding ListmontagemCampeonatoModel4}" HasUnevenRows="True" BackgroundColor="Transparent"
                          SelectionMode="None" SeparatorVisibility="None" VerticalOptions="FillAndExpand">
                           <ListView.ItemTemplate>
                                       <DataTemplate>
                                              <ViewCell>
                                                     <cardsList:NovoCampeonatoCard/>
                                              </ViewCell>
                                       </DataTemplate>
                          </ListView.ItemTemplate>
                    </ListView>
               </Grid>
        </Frame>

           <Frame Grid.Row="2" Grid.Column="1" BorderColor="{StaticResource GateVermelho}" BackgroundColor="{StaticResource GateCremeFundoDashBoard}" 
                  IsVisible="{Binding ListmontagemCampeonatoModel5[0].CampoHabilitado, FallbackValue=false}" Padding="5,2,5,2">
                  <Grid RowDefinitions="Auto,*">
                         <Label Grid.Row="0" Style="{StaticResource Label24BoldStyle}"
                                Text="{Binding ListmontagemCampeonatoModel5[0].MontagemCampeonatoModel_NumeroCampo, StringFormat='Campo {0}'}"/>

                         <ListView Grid.Row="1" ItemsSource="{Binding ListmontagemCampeonatoModel5}" HasUnevenRows="True" BackgroundColor="Transparent"
                                   SelectionMode="None" SeparatorVisibility="None" VerticalOptions="FillAndExpand">
                                <ListView.ItemTemplate>
                                       <DataTemplate>
                                              <ViewCell>
                                                     <cardsList:NovoCampeonatoCard/>
                                              </ViewCell>
                                       </DataTemplate>
                                </ListView.ItemTemplate>
                         </ListView>
                  </Grid>
           </Frame>
    </Grid>
</ContentView>





