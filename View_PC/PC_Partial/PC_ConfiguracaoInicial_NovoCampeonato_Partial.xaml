<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabela.View_PC.PC_Partial.PC_ConfiguracaoInicial_NovoCampeonato_Partial">
    <Grid RowDefinitions="Auto,*" RowSpacing="10">
        <Grid Grid.Row="0" RowDefinitions="Auto,Auto,Auto, Auto,Auto" ColumnDefinitions="Auto,*" RowSpacing="10">
            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                   Text="Nome do Campeonato"/>
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource BorderEntry}">
                <Entry Placeholder="Nome do Campeonato" Style="{StaticResource Entry24Style}"
                       Text="{Binding NomeCampeonato, Mode=TwoWay}"/>
            </Border>

            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                   Text="Data do Campeonato"/>
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource BorderEntry}">
                <DatePicker TextColor="{StaticResource GateVermelho}" FontSize="24" 
                       Date="{Binding DataSelecionada}"/>
            </Border>

            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                   Text="Local do Campeonato"/>
            <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource BorderEntry}">
                <Entry Placeholder="Nome do Clube" Style="{StaticResource Entry24Style}"
                       Text="{Binding LocalCampeonato, Mode=TwoWay}"/>
            </Border>

            <!-- <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource Label24BoldStyle}" -->
            <!--        Text="Número de Rodadas"/> -->
            <!-- <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource BorderEntry}"> -->
            <!--     <Picker  Style="{StaticResource Entry24Style}" -->
            <!--            SelectedItem="{Binding NumeroRodadasSelecionada}" ItemsSource="{Binding ListaRodadas}"/> -->
            <!-- </Border> -->

            <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                   Text="Número de Campos"/>
            <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource BorderEntry}">
                <Picker  Style="{StaticResource Entry24Style}" 
                         SelectedItem="{Binding NumeroCamposSelecionado}" ItemsSource="{Binding ListaCampos}"/>
            </Border>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Grid.Column="0" Style="{StaticResource Button24_Vermelho}"
                    Text="Voltar" VerticalOptions="Start"
                    Command="{Binding VoltarCommand, Mode=TwoWay}"/>
            <Button Grid.Column="1" Style="{StaticResource Button24_Vermelho}"
                    Text="Salvar" VerticalOptions="Start"
                    Command="{Binding ConfigurarCampeonatoCommand, Mode=TwoWay}" IsEnabled="{Binding ModoEdicao}"/>
        </Grid>

    </Grid>
</ContentView>