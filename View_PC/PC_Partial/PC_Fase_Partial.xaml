<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabela.View_PC.PC_Partial.PC_Fase_Partial"
             xmlns:cards="clr-namespace:Tabela.View_PC.Cards_List">

    <Grid  RowDefinitions="Auto, *"  RowSpacing="20">
        <Button Grid.Row="0" Style="{StaticResource Button24_Vermelho}"
                Text="Cadastrar" Command="{Binding CadastrarFaseCommand}" HorizontalOptions="End"/>

        <ListView Grid.Row="1" ItemsSource="{Binding ListaFase}" HasUnevenRows="True" BackgroundColor="Transparent"
                  SelectionMode="Single" SeparatorVisibility="None" SelectedItem="{Binding FaseSelecionado, Mode=TwoWay}" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <cards:FaseCard EditarFaseCommand="{Binding BindingContext.EditarFaseCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"
                                        ExcluirFaseCommand="{Binding BindingContext.ExcluirFaseCommand, Source={RelativeSource AncestorType={x:Type ContentView}}}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentView>