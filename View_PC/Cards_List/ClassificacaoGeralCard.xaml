<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabela.View_PC.Cards_List.ClassificacaoGeralCard"
             xmlns:local="clr-namespace:Tabela.Controls"
             xmlns:cardsList="clr-namespace:Tabela.View_PC.Cards_List">

       <ContentPage.Resources>
        <local:AlternationIndexToColorConverter x:Key="AlternationIndexToColorConverter"
                                                TrueColor="{StaticResource GateCremeFundoDashBoard}"
                                                FalseColor="{StaticResource GateCreme}"/>
    </ContentPage.Resources>

    <Frame CornerRadius="15" HasShadow="False" HeightRequest="100" BorderColor="{StaticResource GateVermelho}"
           BackgroundColor="{Binding IsEven, Converter={StaticResource AlternationIndexToColorConverter}}"
           Padding="10" >
        <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, 7*, 2*"  VerticalOptions="Center" ColumnSpacing="20">
              <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource Label24BoldStyle}"
                     Text="123"/>
            <Label Grid.Row="0" Grid.Column="1" Style="{StaticResource Label24BoldStyle}" VerticalOptions="Center"
                   Text="{Binding Clube_Nome}"/>

              <Grid Grid.Row="0" Grid.Column="2" ColumnDefinitions="*,*,*,*" ColumnSpacing="20">
                  <Label Grid.Row="0" Grid.Column="2" Style="{StaticResource Label24BoldStyle}">
                        <Label.FormattedText>
                              <FormattedString>
                                  <Span Text="1"/>
                                  <Span Text=" V"/>
                              </FormattedString>
                        </Label.FormattedText>
                  </Label>
              </Grid>
            
        </Grid>
    </Frame>
</ContentView>