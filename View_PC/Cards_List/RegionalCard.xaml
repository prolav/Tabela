<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabela.View_PC.Cards_List.RegionalCard"
             xmlns:local="clr-namespace:Tabela.Controls"
             xmlns:cardsList="clr-namespace:Tabela.View_PC.Cards_List">

    <ContentPage.Resources>
        <local:AlternationIndexToColorConverter x:Key="AlternationIndexToColorConverter"
                                                TrueColor="{StaticResource GateCremeFundoDashBoard}"
                                                FalseColor="{StaticResource GateCreme}"/>
    </ContentPage.Resources>

    <Frame CornerRadius="15" HasShadow="False" HeightRequest="100" BorderColor="{StaticResource GateVermelho}"
           BackgroundColor="{Binding IsEven, Converter={StaticResource AlternationIndexToColorConverter}}"
           Padding="10" >
        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*, Auto,Auto"  VerticalOptions="Center" ColumnSpacing="20">
            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource Label24BoldStyle}" VerticalOptions="Center"
                   Text="{Binding Regional_Nome}"/>
            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource Label16Style}" VerticalOptions="Center"
                   Text="{Binding Regional_Presidente}"/>
            <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Style="{StaticResource Button24_Vermelho}" VerticalOptions="Center"
                    Text="Excluir"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type cardsList:RegionalCard}}, Path=ExcluirRegionalCommand}"
                    CommandParameter="{Binding .}" />
            <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource Button24_Vermelho}" VerticalOptions="Center"
                    Text="Editar"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type cardsList:RegionalCard}}, Path=EditarRegionalCommand}"
                    CommandParameter="{Binding .}" />
        </Grid>
    </Frame>
</ContentView>
